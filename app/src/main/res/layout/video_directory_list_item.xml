<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingBottom="5dp"
    android:paddingEnd="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingStart="8dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/tv_directory_image"
        android:src="@mipmap/ic_video_directory"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_directory_name"
        android:layout_toRightOf="@id/tv_directory_image"
        android:layout_toEndOf="@id/tv_directory_image"
        android:layout_marginTop="3dp"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_num_video"
        android:layout_toRightOf="@id/tv_directory_image"
        android:layout_toEndOf="@id/tv_directory_image"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_icon_new"
        android:layout_toRightOf="@id/tv_directory_name"
        android:layout_toEndOf="@id/tv_directory_name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@mipmap/ic_new"/>

</RelativeLayout>